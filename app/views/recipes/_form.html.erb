<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :content %>
  <%= f.text_field :content %>
 
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>
    <%= i.text_field :name %><br>
 
    <%= i.label :quantity %>
    <%= i.text_field :quantity %><br>
 
  <% end %>
 
  <%= f.submit %>
<% end %>